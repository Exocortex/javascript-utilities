{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./config/typescript/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
